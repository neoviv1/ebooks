<?xml version="1.0"?>

<!-- ======================================================================= -->
<!-- common-libs -->
<!-- ======================================================================= -->

<project name="build-lib" default="main" basedir="/home/clearcase/builduser/BUILD">

<property name="include-src" value="false"/>

	
<property name="refclasses.dir" value="${basedir}/${view}/output/classes/bfsarch"/>
<property name="refclasseslist.dir" value="${basedir}/${view}/output/classes/bfsarch-list"/>
<property name="refclassesejb.dir" value="${basedir}/${view}/output/classes/bfsejb"/>
<property name="refbaseclasses.dir" value="${basedir}/${view}/output/classes/bfsarch-archbase"/>
<property name="refbaseclassesan.dir" value="${basedir}/${view}/output/classes/bfsarch-anbase"/>
<property name="classes.dir" value="${basedir}/${view}/output/AN/classes"/>
<property name="anbase-classes.dir" value="${basedir}/${view}/output/bfsarch-anbase/classes"/>

<property name="viewroot" value="/view/${view}/home/adminCC/vobstore/Vb_ARCH/workspace"/>
<property name="an.srcdir" value="${viewroot}/AN-jar/src"/>
<property name="bfsarch-anbase.srcdir" value="${viewroot}/bfsarch-anbase-jar"/>

<property name="commonlib.dir" value="/view/${view}/home/adminCC/vobstore/Vb_ARCH/workspace/common-libs/libs"/>


<!-- =================================================================== -->
<!-- Creates the ear archives -->
<!-- =================================================================== --> 
	
<target name="mkdir">
	<mkdir dir="${basedir}/${view}"/>
	<mkdir dir="${basedir}/${view}/output"/>
	<mkdir dir="${basedir}/${view}/output/jar"/>
	<mkdir dir="${basedir}/${view}/output/AN"/>
	<mkdir dir="${basedir}/${view}/output/AN/classes"/>
	<mkdir dir="${basedir}/${view}/output/bfsarch-anbase"/>
	<mkdir dir="${basedir}/${view}/output/bfsarch-anbase/classes"/>
</target>	

<target name="compile" depends="mkdir">
	<echo message="Compiling AN java ..."/>	
	<javac debug="true" destdir="${classes.dir}" nowarn="true">
		<src path="${an.srcdir}"/>
		<classpath>
			<pathelement path="${refclasses.dir}"/>
			<pathelement path="${refclasseslist.dir}"/>
			<pathelement path="${refclassesejb.dir}"/>
			<pathelement path="${refbaseclasses.dir}"/>
			<pathelement path="${refbaseclassesan.dir}"/>
      			<fileset dir="${commonlib.dir}">
        			<include name="**/*.jar"/>
      			</fileset>
		</classpath>
	</javac>

	<echo message="Compiling bfsarch-anbase java ..."/>
	<echo message="Source Directory is ${bfsarch-anbase.srcdir}"/>
	<echo message="Destination Directory is ${anbase-classes.dir}"/>
        <javac verbose="true" debug="true" destdir="${anbase-classes.dir}" nowarn="true">
                <src path="${bfsarch-anbase.srcdir}"/>
                <classpath>
                        <pathelement path="${refclasses.dir}"/>
                        <pathelement path="${refclasseslist.dir}"/>
                        <pathelement path="${refclassesejb.dir}"/>
                        <pathelement path="${refbaseclasses.dir}"/>
                        <pathelement path="${refbaseclassesan.dir}"/>
                        <pathelement path="${classes.dir}"/>
                        <fileset dir="${commonlib.dir}">
                                <include name="**/*.jar"/>
                        </fileset>
                </classpath>
        </javac>

</target>
<target name="jar" depends="compile">
<echo message="Deleting AN jar from ${basedir}/${view}/output  ... " />
<delete failonerror="false">
	<fileset dir="${basedir}/${view}/output">
	    <include name="AN.jar"/>
	</fileset>
</delete>

<echo message="Deleting bfsarch-anbase jar from ${basedir}/${view}/output  ... " />
<delete failonerror="false">
	<fileset dir="${basedir}/${view}/output">
	    <include name="bfsarch-anbase.jar"/>
	</fileset>
</delete>

<echo message="Building AN.jar from ${an.srcdir} ... " />
<jar jarfile="${basedir}/${view}/output/jar/AN.jar" > 
	<fileset dir="${classes.dir}" includes="com/tcs/bancs/AN/*.class" />
</jar>

<echo message="Building bfsarch-anbase.jar from ${bfsarch-anbase.srcdir} ... " />
<jar jarfile="${basedir}/${view}/output/jar/bfsarch-anbase.jar" > 
	<fileset dir="${anbase-classes.dir}" includes="com/tcs/bfsarch/common/*.class" />
</jar>
</target>

<!-- =================================================================== -->
<!-- main: call previous ant tasks -->
<!-- =================================================================== -->
<target name="main" depends="jar">
</target>

</project>
